########################################
# IMAP Connection
########################################
IMAP_SERVER=mail.example.com
IMAP_PORT=993
IMAP_USER=bounce@example.com
IMAP_PASS=ChangeMe123
IMAP_SECURE=ssl   # options: ssl, starttls

########################################
# IMAP Folders (Normal Mode)
########################################
IMAP_FOLDER_INBOX=INBOX
IMAP_FOLDER_PROCESSED=PROCESSED
IMAP_FOLDER_PROBLEM=PROBLEM
IMAP_FOLDER_SKIPPED=SKIPPED

########################################
# IMAP Folders (Test Mode)
########################################
IMAP_FOLDER_TEST=TEST
IMAP_FOLDER_TESTPROCESSED=TESTPROCESSED
IMAP_FOLDER_TESTPROBLEM=TESTPROBLEM
IMAP_FOLDER_TESTSKIPPED=TESTSKIPPED

########################################
# Bounce Notifications
########################################
# Comma-separated list of addresses to always notify
NOTIFY_CC=admin@example.com,ops@example.com
# Only used when IMAP_TEST_MODE=true
NOTIFY_CC_TEST=test-notify@example.com

########################################
# Modes
########################################
# true = read from TEST folder and suppress CC notifications
IMAP_TEST_MODE=false

########################################
# SMTP Relay (for sending bounce notifications)
########################################
SMTP_SERVER=localhost
SMTP_PORT=25

########################################
# Web Dashboard
########################################
# Web server ports
WEBUI_PORT=8888

# Login password for dashboard
ADMIN_PASS=ChangeMe123
# Session signing secret (random string)
SESSION_SECRET=SomeSuperSecretKey

########################################
# Logging
########################################
# Logs and database persist in ./data/
# SQLite DB: /data/bounces.db
# Logs:      /data/*.log