# ============================
# IMAP Settings
# ============================
IMAP_SERVER=mail.example.com
IMAP_PORT=143
# Security options: ssl | starttls | none
IMAP_SECURE=starttls
IMAP_USER=imapuser@example.com
IMAP_PASS=supersecretpassword

# IMAP Folders (normal mode)
IMAP_FOLDER_INBOX=INBOX
IMAP_FOLDER_PROCESSED=PROCESSED
IMAP_FOLDER_PROBLEM=PROBLEM
IMAP_FOLDER_SKIPPED=SKIPPED

# IMAP Folders (test mode)
IMAP_FOLDER_TEST=TEST
IMAP_FOLDER_TESTPROCESSED=TESTPROCESSED
IMAP_FOLDER_TESTPROBLEM=TESTPROBLEM
IMAP_FOLDER_TESTSKIPPED=TESTSKIPPED

# Flags
IMAP_TEST_MODE=true
DEBUG=false

# ============================
# Notification Settings
# ============================
NOTIFY_CC=alerts@example.com,ops@example.com
NOTIFY_CC_TEST=testalerts@example.com

# Organization info (used in notification emails)
ORG_NAME="My Organization"
ORG_EMAIL=support@example.com
ORG_LOGO_URL=https://www.example.com/logo.png

# ============================
# SMTP Relay
# ============================
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtpuser@example.com
SMTP_PASS=smtppassword

# ============================
# Dashboard / Web UI
# ============================
WEBUI_PORT=8888
ADMIN_PASS=changeme
SESSION_SECRET=supersecretkey

# ============================
# Misc (optional / advanced)
# ============================
TZ=UTC
# HTTP Strict Transport Security (HSTS) - optional
HSTS_MAX_AGE=15552000        # ~180 days
HSTS_INCLUDE_SUBDOMAINS=true